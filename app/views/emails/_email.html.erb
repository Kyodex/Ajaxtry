<%= form_for email do |f| %>

  <div class="tab">
    <button class="tablinks" type="button" onclick="openCity(event, 'email')">Lire</button>
    <a>Object : </a><%= f.label :read, email.object %>
  </div>

  <div id="email" class="tabcontent">
    <a>Corp : </a><%= f.label :read, email.body %>
  </div>

<p><%= f.check_box :read %>
<%= f.submit "Valider" %>
  <%= link_to "(remove)", email, method: :delete, data: {confirm: "Are you sure?"} %></p>
<% end %>
